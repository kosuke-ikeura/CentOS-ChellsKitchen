<div class="wrapper">
  <div class="resistration-wrapper">
    <h2>サインアップ</h2>
    <div class="fill-in-wrapper">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <dl>
              <div class="fill-in-flex name">
                <dt>名前</dt>
                <dd><%= f.text_field :name %></dd>
              </div>
              <div class="fill-in-flex">
                <dt>メールアドレス</dt>
                <dd class="long"><%= f.email_field :email %></dd>
              </div>
              <div class="fill-in-flex">
                <dt>パスワード</dt>
                <dd class="long"><%= f.password_field :password, autocomplete: "new-password"  %></dd>
              </div>
              <div class="fill-in-flex">
                <dt>パスワード再確認</dt>
                <dd class="long"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></dt>
              </div>
                <dd class="actions">
                  <%= f.submit "サインアップ" %>
                </dd>
              </dl>
            <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>